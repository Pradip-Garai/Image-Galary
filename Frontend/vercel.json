{
    "version": 2,
    "installCommand": "npm install --legacy-peer-deps",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "routes": [
        {
            "src": "/assets/(.*)",
            "headers": { "cache-control": "public, max-age=31536000, immutable" },
            "dest": "/assets/$1"
        },
        {
            "src": "/(.*).(js|css|ico|json)",
            "headers": { "cache-control": "public, max-age=31536000, immutable" },
            "dest": "/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}